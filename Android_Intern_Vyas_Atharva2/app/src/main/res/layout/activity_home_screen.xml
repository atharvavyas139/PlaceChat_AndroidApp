<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.experiment.lenovo.android_intern_vyas_atharva.HomeScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <TextView
        android:id="@+id/topictitle"
        android:text="Topic:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:padding="8dp"
        android:textColor="#1B5E20"/>
    <EditText
        android:id="@+id/discussion"
        android:hint="add discussion here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
    <Button
        android:id="@+id/adddiscussion"
        android:text="add chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="adddiscussion"
        android:layout_margin="8dp"
        android:background="#2E7D32"
        android:textColor="#FFFFFF"/>
    <Button
        android:text="get chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getchat"
        android:layout_margin="8dp"
        android:background="#2E7D32"
        android:textColor="#FFFFFF"/>
        </LinearLayout>
    <TextView
        android:id="@+id/chatcollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chats for this place and the chosen topic:\n"
        android:textSize="18sp"
        android:paddingLeft="8dp"
        android:textColor="#1B5E20"/>
</LinearLayout>
</ScrollView>